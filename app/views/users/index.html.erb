<div class="container">
    <div class="row">
        <div class="col-xs-3">
            <%= render 'books/list', book: @book %>
        </div>
        <div class="col-xs-9">
            <h1>Users</h1>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                <% @users.each do |user| %>
                    <tr>
                      <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class:"pull-left, profile-thumb", fallback: "no_image.jpg", size:'30x30' %></td>
                      <td><%= user.name %></td>
                      <td><%= link_to user_path(user.id), class:"link-btn" do %>Show<% end %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
