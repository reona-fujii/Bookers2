<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1>User info</h1>
      <% if @user.errors.any? %>
        <div id="error_explanation" class="alert">
          <h3><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h3>
          <ul>
            <%= @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @user, local: true do |f| %>
      <div>
        <label>Name</label>
        <div>
          <%= f.text_field :name, autofocus: true %>
        </div>
        <label>Image</label>
        <div>
        <%= f.attachment_field :profile_image %>
        </div>
        <label>Introduction</label>
        <%= f.text_area :introduction %>
        <div>
        <%= f.submit "Update User", class:"btn btn-default" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>