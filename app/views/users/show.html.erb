<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= render 'books/list', book: @book %>
        </div>
        <div class="col-md-9">
            <h1>Books</h1>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                    </tr>
                </thead>
                <tbody>
                <% @books.each do |book| %>
                    <tr>
                      <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class:"pull-left, profile-thumb", fallback: "no_image.jpg", size:'30x30' %></td>
                      <td><%= link_to book_path(book), class:"link-btn" do %><%= book.title %><% end %></td>
                      <td><%= book.opinion %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>