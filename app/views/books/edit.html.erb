
<div class="container">
  <div class="row">
    <div class="col-md-9 col-md-offset-3">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <div id = "error_explanation" class="alert">
          <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div>
       <%= form_with model:@book, local: true do |f| %>
       <div>
         <%= f.label :title %>
       </div>
       <div>
         <%= f.text_field :title, :size=>"68" %>
       </div>
       <div>
         <%= f.label :opinion %>
       </div>
       <div>
         <%= f.text_area :opinion, :size=>"67" %>
       </div>
       <%= f.submit "update book", class:"btn btn-primary col-xs-7" %>
       <% end %>
      </div>
    </div>
    <div class="col-md-9 col-md-offset-3">
      <div class="edit-block">
        <%= link_to 'Show', book_path(@book), class:"link-btn" %>
         | 
        <%= link_to 'Back', books_path, class:"link-btn" %>
      </div>
      <h5 class="text-right">CopyRight Inflatop.inc</h5>
    </div>
  </div>
</div>