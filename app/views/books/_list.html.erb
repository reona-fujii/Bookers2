<h1>User info</h1>
            <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, class:"pull-left, profile-thumb", fallback: "no_image.jpg" %>
            <table class="table">
                <thred>
                    <tr>
                        <th>name</th>
                        <th><%= current_user.name %></th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th><%#= current_user.introduction %></th>
                    </tr>
                </thred>
            </table>
            <div>
                <%= link_to edit_user_path(current_user.id), class:"btn btn-default col-xs-12" do %><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span><% end %>
                
            </div>
            <h1>New Book</h1>
            <%= form_with model:book, local:true do |f| %>
            <div class="field">
                <div>
                    <%= f.label :title %>
                </div>
                <div>
                <%= f.text_field :title %>
                </div>
            </div>
            <div class="opinion">
                <div>
                    <%= f.label :opinion %>
                </div>
                <div>
                    <%= f.text_area :opinion %>
                </div>
            </div>
            <div>
                <%= f.submit 'Create Book' , class:"btn btn-primary" %>
            </div>
            <% end %>