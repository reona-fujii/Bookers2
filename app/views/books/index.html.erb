<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h1>User info</h1>
            <h1>New Book</h1>
            <%= form_with model:@book, local:true do |f| %>
            <div class="field">
                <div>
                <%= f.label :title %>
                </div>
                <div class>
                <%= f.text_field :title %>
                </div>
            </div>
            <div class="opinion">
                <div>
                <%= f.label :opinion %>
                </div>
                <div>
                <%= f.text_area :opinion %>
                </div>
            </div>
            <div class="create_book">
                <%= f.submit 'Create Book' , class:"btn btn-primary" %>
            </div>
            <% end %>
        </div>
        <div class="col-md-9">
            <h1>Books</h1>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Opinion</th>
                    </tr>
                </thead>
                <tbody>
                <% @books.each do |book| %>
                    <tr>
                      <td><%= link_to books_path(book.id) do %><%= book.title %><% end %></td>
                      <td><%= book.opinion %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
